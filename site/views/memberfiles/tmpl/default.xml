<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_JSCHUETZE_VIEW_DEFAULT_TITLE">
        <message>
            <![CDATA[COM_JSCHUETZE_VIEW_DEFAULT_TITLE_DESC]]>
        </message>
    </layout>

    
    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <!-- Page-Options. -->
        <fieldset   name        = "page-options"
                    label       = "COM_MENUS_PAGE_OPTIONS_LABEL">
                    
            <field  name        = "tab_plugin"
                    type        = "list"
                    default     = "1"
                    label       = "COM_JSCHUETZE_FIELD_TABPLUGIN_LABEL"
                    description = "COM_JSCHUETZE_FIELD_TABPLUGIN_LABEL_DESC">
                <option value="0">COM_JSCHUETZE_JOOMLAWORKS</option>
                <option value="1">COM_JSCHUETZE_TOOLJOOM</option>
            </field>

            <field  name        = "show_adress_public"
                    type        = "radio"
                    default     = "0"
                    label       = "COM_JSCHUETZE_FIELD_SHOW_ADRESS_PUBLIC_LABEL"
                    description = "COM_JSCHUETZE_FIELD_SHOW_ADRESS_PUBLIC_LABEL_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field  name        = "show_vcard_public"
                    type        = "radio"
                    default     = "0"
                    label       = "COM_JSCHUETZE_FIELD_SHOW_VCARD_PUBLIC_LABEL"
                    description = "COM_JSCHUETZE_FIELD_SHOW_VCARD_PUBLIC_LABEL_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field  name        = "vcard_as_qrcode"
                    type        = "radio"
                    default     = "1"
                    label       = "COM_JSCHUETZE_FIELD_SHOW_VCARD_AS_QRCODE_LABEL"
                    description = "COM_JSCHUETZE_FIELD_SHOW_VCARD_AS_QRCODE_LABEL_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field  name        = "show_headerimage"
                    type        = "radio"
                    default     = "1"
                    label       = "COM_JSCHUETZE_FIELD_SHOWHEADERIMAGE_LABEL"
                    description = "COM_JSCHUETZE_FIELD_SHOWHEADERIMAGE_LABEL_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field  name        = "headerimage_left_right"
                    type        = "list"
                    default     = "1"
                    label       = "COM_JSCHUETZE_FIELD_HEADERIMAGELEFTRIGHT_LABEL"
                    description = "COM_JSCHUETZE_FIELD_HEADERIMAGELEFTRIGHT_LABEL_DESC">
                <option value="0">COM_JSCHUETZE_LEFT</option>
                <option value="1">COM_JSCHUETZE_RIGHT</option>
            </field>
            
            <field  name        = "headerimage"
                    type        = "media"
                    label       = "COM_JSCHUETZE_FIELD_HEADERIMAGE_LABEL"
                    description = "COM_JSCHUETZE_FIELD_HEADERIMAGE_LABEL_DESC"
                    default     = "">
            </field>
            
            <field  name        = "logoimage"
                    type        = "media"
                    label       = "COM_JSCHUETZE_FIELD_LOGOIMAGE_LABEL"
                    description = "COM_JSCHUETZE_FIELD_LOGOIMAGE_LABEL_DESC"
                    default     = "">
            </field>

            <field  name        = "noimage"
                    type        = "media"
                    label       = "COM_JSCHUETZE_FIELD_NOIMAGE_LABEL"
                    description = "COM_JSCHUETZE_FIELD_NOIMAGE_LABEL_DESC"
                    default     = "">
            </field>

            <field  name        = "preamble"
                    type        = "textarea"
                    label       = "COM_JSCHUETZE_FIELD_PREAMBLE_LABEL"
                    description = "COM_JSCHUETZE_FIELD_PREAMBLE_LABEL_DESC"
                    class       = ""
                    rows        = "10"
                    cols        = "50"
                    default     = ""
            />
        </fieldset>    
    </fields>

</metadata>
    